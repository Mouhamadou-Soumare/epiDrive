{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Essayez ceci si "bundler" pose probl√®me
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "target": "ES2017",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*": ["./lib/*"],
      "@components/*": ["./src/components/*"],
      "@services/*": ["./src/services/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "lib/prisma.js",
    "prisma/seed.js",
    "prisma/seed/generateSlug.js",
    "prisma/seed/categories.js",
    "prisma/seed/product.js",
    "prisma/seed/subcategories.js"
, "src/hooks/recettes/useRecettes.js"  ],
  "exclude": ["node_modules"]
}

{
  "compilerOptions": {
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "jsx": "preserve", 
    "esModuleInterop": true, 
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node", 
    "skipLibCheck": true, 
    "lib": ["dom", "dom.iterable", "esnext"], 
    "allowJs": true,
    "strict": false, 
    "noImplicitAny": false,
    "noEmit": true, 
    "module": "esnext", 
    "resolveJsonModule": true, 
    "isolatedModules": true, 
    "incremental": true, 
    "target": "ES2017", 
    "baseUrl": "./", 
    "paths": {
      "@/*": ["./src/*"], 
      "@lib/*": ["./lib/*"], 
      "@components/*": ["./src/components/*"], 
      "@services/*": ["./src/services/*"] 
    },
    "plugins": [
      {
        "name": "next" 
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "lib/prisma.mjs",
    "prisma/seed.mjs",
    "prisma/seed/generateSlug.mjs",
    "prisma/seed/categories.mjs",
    "prisma/seed/product.mjs",
    "prisma/seed/subcategories.mjs",
    "src/hooks/recettes/useRecettes.ts",
    "generate-tests.cjs"
, "src/hooks/categories/useCategories.ts"  ],
  "exclude": [
    "node_modules" // Exclut le dossier `node_modules`
  ]
}

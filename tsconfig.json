{
  "compilerOptions": {
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "target": "ES2017",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@lib/*": [
        "./lib/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@services/*": [
        "./src/services/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "lib/prisma.js",
    "prisma/seed.js",
    "prisma/seed/generateSlug.js",
    "prisma/seed/categories.js",
    "prisma/seed/product.js",
    "prisma/seed/subcategories.js",
    "src/hooks/recettes/useRecettes.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
